<!DOCTYPE html>
<head>
    <title>Driver's Details Form</title>
</head>
<body>

    <div>
        <h1>Add The Driver's Information Here!</h1>
        <p>Find below is the form to add a new driver into the system.</p>
        <form action="/add-driver" method="POST">

            <div>
                <label for="name">Driver's Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <br>
            <div>
                <label for="age">Driver's Age:</label>
                <input type="text" id="age" name="age" required> 
            </div>
            <br>
            <div>
                <label for="phone">Driver's Phone Number:</label>
                <input type="text" id="phone" name="phone" required>
            </div>
            <br>
            <div>
                <button type="submit">Submit</button> 
            </div>
        </form>
    </div>

    <br><br>
    
    <h1>Drivers Records</h1>
    <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Phone</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% drivers.forEach(function(driver) { %>
                <tr>
                    <td><%= driver.name%></td>
                    <td><%= driver.age%></td>
                    <td><%= driver.phone%></td>
                    <td><form action="/delete-driver-record<%=driver._id%>/?_method=DELETE" method="POST">
                            <button type="submit">Delete</button>
                         </form>
                    </td>
                    <td><button><a href="/update-driver-record<%=driver._id%>/edit">Edit</a> </button></td>
                </tr>
                <% }); %>
            </tbody>
        </table></center><br><br>
    <div>
        <button><a href="/"> Log Out </a></button>
    </div>
    
</body>
</html>