<!DOCTYPE html>
<head>
    <title>Car's Details Form</title>
</head>
<body>

    <div>
        <h1>Add The Car's Information Here!</h1>
        <p>Find below is the form to add a new car into the system.</p>
        <form action="/add-car" method="POST">

            <div>
                <label for="carType">Type of Car:</label>
                <input type="text" id="carType" name="carType" required>
            </div>
            <br>
            <div>
                <label for="plateNo">Plate Number:</label>
                <input type="text" id="plateNo" name="plateNo" required> 
            </div>
            <br>
            <div>
                <button type="submit">Submit</button> 
            </div>
        </form>
    </div><br><br>
    
    <h1>Car Records</h1>
    <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Plate Number</th>
                    <th>Delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% cars.forEach(function(car) { %>
                <tr>
                    <td><%= car.carType%></td>
                    <td><%= car.plateNo%></td>
                    <td><form action="/delete-car-record<%=car._id%>/?_method=DELETE" method="POST">
                            <button type="submit">Delete</button>
                         </form>
                    </td>
                    <td><button><a href="/update-car-record<%=car._id%>/edit">Edit</a> </button></td>
                </tr>
                <% }); %>
            </tbody>
        </table></center><br><br>
    <div>
        <button><a href="/"> Log Out </a></button>
    </div>
    
</body>
</html>